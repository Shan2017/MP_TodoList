/* me.wxss */

.userinfo-part {
  display: block;
  background-color: #3d3d3d;
  width: 100%;
  height: 300rpx;
  margin: 0rpx;
  border: 0rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 16pt;
}

.operate-part {
  display: block;
  background-color: #f2f4f6;
  width: 100%;
  height: 100%;
  margin: 0rpx;
  border: 0rpx;
}

.card {
  background-color: #fff;
  width: 100%;
  height: 100%;
  margin-bottom: 30rpx;
}

.menu-column {
  padding: 30rpx;
  background-color: #fff;
}

.menu-column:hover {
  background-color: #f2f4ae;
}

.menu-column::after {
  background-color: #000;
}

.menu-column__head {
  display: inline;
  font-size: 14pt;
}

.menu-column__footer {
  display: inline;
  float: right;
  font-size: 14pt;
  color: #d8d8d8;
}
